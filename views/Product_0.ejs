<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../stylesheets/Product.css">
</head>
<body>
    <header>
        <div class="navbar">
            <div class="nav_logo border">
                <div class="logo"></div>
            </div>

            <div class="nav_home border">
                <a href="/" class="home_link">
                    <i class="fa-solid fa-house"></i>
                    Home
                </a>
            </div>

            <div class="nav_address border">
                <p class="first">Deliver to</p>
                <div class="add_icon">
                    <i class="fa-solid fa-location-dot"></i>
                    <p class="second">Bangladesh</p>
                </div>
            </div>


            <div class="nav_search">
                <select class="search_select" name="" id="">
                    <option value="">All</option>
                </select>
                <input class="search_input" type="text" placeholder="Search Here">
                <div class="search_icon">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
            </div>

            <div class="nav-signin">
                <% if (user1) { %>
                <div class="signa">
                  <p><span>Hello, <%= user1.username %></span></p>
                  <p class="nav-second">
                    <a class="logout1" href="/logout">Logout</a>
                  </p>
                </div>
                <% } else { %>
                <a href="/login?returnTo=<%= encodeURIComponent(originalUrl) %>" class="signa">
                  <p><span>Hello, sign in</span></p>
                  <p class="nav-second">Account & Lists</p>
                </a>
                <% } %>
            </div>
            
            

            <div class="nav-return border">
                <p><span>Return</span></p>
                <p class="nav-second">& Orders</p>
            </div>

            <div class="nav-cart border">
                <i class="fa-solid fa-cart-shopping"></i>
                Cart
            </div>

        </div>

        <!-- Started Second Div For panel -->
        <div class="panel">
            <div class="panel-all">
                <i class="fa-solid fa-bars"></i>
                All
            </div>

            <div class="panel-option">
                <p>Today's Deal</p>
                <p>Customer Service</p>
                <p>Registry</p>
                <p>Gift Cards</p>
                <p>Sell</p>
            </div>

            <div class="panel-deals">
                <p>Shop deals in easy way</p>
            </div>

        </div>
    </header>


    <div class="product-container">        
        <% mahee.forEach(function(e){ %>
            <div class="product-card">
                <div class="product-image-container">
                    <img class="product-image" src="<%=e.image%>" alt="<%=e.title%>">
                </div>
                <div class="product-details">
                    <div class="product-category">
                        <%=e.producttype %>
                    </div>
                    <div class="product-title">
                        <%=e.title%>
                    </div>
                    <div class="product-size">
                        Size: <%=e.size%>
                    </div>
                    <div class="product-price">
                        Price: <%=e.price%>&#2547;
                    </div>
                    <a href="/productdetails/<%= e._id%>">
                        <button class="read-more-btn">Read More</button>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
    
</body>
</html>